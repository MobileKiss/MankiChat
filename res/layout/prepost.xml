<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FLPrepost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <by.mobilekiss.mankichat.Redraw
        android:id="@+id/vPrepost"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </by.mobilekiss.mankichat.Redraw>

    <ImageView
        android:id="@+id/btnSending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/prepost_form_send"
        android:padding="5dp"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/btnDrawing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:background="@drawable/prepost_draw"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/prepost_btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/prepost_close_xml"
        />

    <SeekBar
        android:id="@+id/prepost_seekbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTimer"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/prepost_ivTimer_icon"
        android:layout_toRightOf="@+id/prepost_btnClose"
        android:background="@drawable/post_form_seecbar_background"
        android:max="9"
        android:paddingLeft="17dp"
        android:paddingRight="20dp"
        android:progress="9"
        android:progressDrawable="@drawable/post_form_seecbar_background"
        android:thumb="@drawable/post_form_seecbar_thumbnail"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/prepost_ivTimer_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnDrawing"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/prepost_timer_icon" />

    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/prepost_seekbar"
        android:layout_alignTop="@+id/btnDrawing"
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:paddingRight="10dp"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSending"
        android:layout_below="@+id/prepost_seekbar"
        android:orientation="vertical"
        android:paddingBottom="90dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/prepost_form_timer_dialog_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/prepost_timerialog_background"
            android:fitsSystemWindows="true"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textSize="90sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/prepost_form_timer_tvstatic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/prepost_timerialog_background"
            android:fitsSystemWindows="true"
            android:gravity="top|center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="ВРЕМЯ ДЕМОНСТРАЦИИ ФОТО"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#CCCCFF"
            android:textSize="15sp"
            android:visibility="invisible" />

    </LinearLayout>
    
</RelativeLayout>